<section class="home-section overlay bg-image" style="background: url(<%= asset_path 'hero_1.jpg' %>);" id="home-section">
  <div class="row align-items-center justify-content-center">
    <div class="col-md-12">
      <div class="mb-5 text-center" style="padding-top: 12%">
<h2 class="text-white font-weight-bold">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field text-white font-weight-bold">
    <%= f.label :メール %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field text-white font-weight-bold">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field text-white font-weight-bold">
      <%= f.check_box :remember_me %>
      <%= f.label :リメンバー・ミー%>
    </div>
  <% end %>

  <div class="actions text-white font-weight-bold">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>