<header class="site-navbar mt-3">
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="site-logo col-6"></div>
      <nav class="mx-auto site-navigation">
        <% if user_signed_in? && current_user.type_user ==0 %>
          <ul class="site-menu js-clone-nav d-none d-xl-block ml-0 pl-0">
          </ul>
        <% else %>
        <ul class="site-menu js-clone-nav d-none d-xl-block ml-0 pl-0">
          <li><%= link_to "TOPページ", root_path%></li>
          <%if user_signed_in? %>
            <li><%= link_to "プロフィール", edit_user_registration_path%></li>
            <% end  %>
          <% if user_signed_in? && current_user.type_user==2 %>
            <li><%= link_to "仕事を登録", new_jobs_path%></li>
          <%end %>
          <% if user_signed_in? && current_user.type_user==1 %>
            <li><%= link_to "応募中", detail_path%></li>
          <%end %>
        </ul>
        <%end  %>
      </nav>
     <%if !user_signed_in? %>
      <div class="right-cta-menu text-right d-flex aligin-items-center col-6">
        <div class="ml-auto">
        </div>
        <%= button_to "ログイン", new_user_session_path,
                      :class => "btn btn-primary bo-2 d-none d-lg-inline-block"%>
      </div>
      <% else %>
        <div class="right-cta-menu text-right d-flex aligin-items-center col-6">
          <div class="ml-auto">
          </div>
          <button class="btn btn-primary border-width-2 d-none d-lg-inline-block"><%= current_user.email %></button>
          <%= button_to "ログアウト", destroy_user_session_path,
                        :class => "btn btn-primary bo-2 d-none d-lg-inline-block",method: :delete %>
        </div>
      <% end %>
    </div>
  </div>
</header>