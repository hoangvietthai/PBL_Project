<body id="top" style="background: url(<%= asset_path 'profile.jpg' %>)">
<div class="site-wrap">
  <!-- HOME -->
  <div class="container">
    <div class="row align-items-center justify-content-center">
      <div class="col-md-12">
      </div>
    </div>
  </div>
  <section class="site-section text-center" style="color: #1b1e21">
    <div class="container">
      <div class="row mb-5 justify-content-center">
        <div class="text-center">
          <h2 class="section-title mb-2">ユーザーの編集</h2>
        </div>
      </div>
      <%= form_for admins_new_path, :method => :post do |f| %>
        <div class="field text-white font-weight-bold">
          <%= f.label :メール %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field text-white font-weight-bold">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field text-white font-weight-bold">
          <%= f.label :パスワード確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field text-white font-weight-bold">
          <%= f.label :名前 %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        <div class="field text-white font-weight-bold">
          <%= f.label :アドレス %><br />
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
        <div class="field  text-white font-weight-bold">
          <%= f.label :大学 %><br />
          <%= f.text_field :university, autofocus: true %>
        </div>
        <div class="field  text-white font-weight-bold">
          <%= f.label :自己PR__学生に対して %><br />
          <%= f.text_area :pr, autofocus: true  %>
        </div>
        <div class="field  text-white font-weight-bold">
          <%= f.label :専門 %><br />
          <%= f.text_field :major, autofocus: true %>
        </div>
        <div class="field text-white font-weight-bold">
          <%= f.label :ユーザー類 %><br />
          <%= f.select :type_user, {学生:1, 企業:2}%>
        </div>
        <div class="actions">
          <%= f.submit "登録" %>
        </div>
      <% end %>
    </div>
  </section>
</div>
</body>
